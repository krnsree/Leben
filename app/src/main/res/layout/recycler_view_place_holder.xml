<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:id="@+id/phcontainer"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ph_card_bg"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/phlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phtitle"
            android:layout_alignStart="@+id/phtitle"
            android:layout_alignLeft="@id/phtitle"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="8dp"
            android:text="Location:"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/phtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phlocation"
            android:layout_alignStart="@+id/phlocation"
            android:layout_alignLeft="@id/phlocation"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="8dp"
            android:text="Time:"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/phphno"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/phlocation"
            android:layout_alignStart="@+id/phtime"
            android:layout_alignLeft="@id/phtime"
            android:layout_marginStart="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="34dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="8dp"
            android:text="Phone:"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/phtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Simple Title Text "
            android:textColor="@color/grey"
            android:textStyle="bold" />

        <Button
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="19dp"
            android:background="@drawable/ph_card_bg"
            android:text="Location"
            android:textColor="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phtime" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>